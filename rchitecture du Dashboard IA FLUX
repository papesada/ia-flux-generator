import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt

def afficher_dashboard():
    st.title("üìä Tableau de Bord IA FLUX")
    
    # Lecture des donn√©es enregistr√©es
    try:
        df = pd.read_csv('ia_flux_usage_stats.csv')
        
        # 1. Chiffres cl√©s (KPIs)
        col1, col2, col3 = st.columns(3)
        col1.metric("Total Utilisations", len(df))
        col2.metric("Cours G√©n√©r√©s", len(df[df['Action'] == 'Generation_Cours']))
        
        # Calcul du taux de r√©ussite moyen
        quiz_df = df[df['Action'] == 'RESULTAT_QUIZ']
        if not quiz_df.empty:
            avg_score = (quiz_df['Score'].sum() / quiz_df['Total_Questions'].sum()) * 100
            col3.metric("Taux de R√©ussite Moyen", f"{int(avg_score)}%")

        # 2. Graphique des mati√®res les plus consult√©es
        st.subheader("üìà Popularit√© par Mati√®re")
        matiere_counts = df['Mati√®re'].value_counts()
        st.bar_chart(matiere_counts)

    except FileNotFoundError:
        st.warning("Aucune donn√©e disponible pour le moment. Commencez √† g√©n√©rer des cours !")

# Int√©gration dans le menu principal
